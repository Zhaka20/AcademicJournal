@model AcademicJournal.DAL.Models.Assignment

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Created by
        </dt>

        <dd>
            @Html.ActionLink(Model.Creator.FullName, "Details", "Mentors", new { id = Model.CreatorId }, null)
        </dd>

        <dt>
           Assigned to
        </dt>

        <dd>
            @Html.ActionLink(Model.Student.FullName, "Details", "Students", new { id = Model.StudentId }, null)
        </dd>
      
        <dt>
            Task file
        </dt>

        <dd>
            @if (Model.TaskFile != null)
            {
                @Html.ActionLink(Model.TaskFile.FileName, "DownloadTaskFile", "Assignments", new { id = Model.AssignmentId }, null)
            }
        </dd>

        <dt>
            Submitted file
        </dt>

        <dd>
            @if (Model.SubmitFile != null)
            {
                @Html.ActionLink(Model.SubmitFile.FileName, "DownloadSubmitFile", "Assignments", new { id = Model.AssignmentId }, null)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Completed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Grade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Grade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Submitted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Submitted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AssignmentId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
