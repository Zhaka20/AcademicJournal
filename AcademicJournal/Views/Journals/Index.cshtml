@model AcademicJournal.ViewModels.Controller.JournalIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MentorModel.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MentorModel.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JournalModel.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Journals) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mentor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mentor.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Fill", "Fill", new { id = item.Id })
        </td>
    </tr>
}

</table>
