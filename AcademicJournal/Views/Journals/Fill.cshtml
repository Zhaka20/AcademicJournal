@model AcademicJournal.ViewModels.Controller.JournalFillViewModel
@{
    ViewBag.Title = "Fill";
}

<h2>Fill</h2>

<div>
    <h4>Journal</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Journal.Mentor.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Journal.Mentor.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Journal.Mentor.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Journal.Mentor.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Journal.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Journal.Year)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Journal.Id }) |
    @Html.ActionLink("Back to Home", "Home", "Mentors")
</p>
<br />
<hr />
<h3>Work days...</h3>

<p>
    @Html.ActionLink("Create New Work Day", "Create", "WorkDays", new { id = Model.Journal.Id },null)
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WorkDayModel.Day)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Journal.WorkDays)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit","Workdays", new { id = item.Id },null) |
                @Html.ActionLink("Details", "Details", "Workdays", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Workdays", new { id = item.Id }, null) |
                @Html.ActionLink("Add attendees", "AddAttendees", "Workdays", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
