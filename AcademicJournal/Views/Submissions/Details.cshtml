@model AcademicJournal.ViewModels.Controller.SubmissionDetailsVM

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Submission</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Assignment
        </dt>

        <dd>
            @Html.ActionLink(Model.Submission.Assignment.Title, "Details", "Assignments", new {id = Model.Submission.AssignmentId}, null)
        </dd>

        <dt>
            Students Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentModel.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Submission.Grade)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Submission.Grade)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Submission.Completed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Submission.Completed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Submission.DueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Submission.DueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Submission.SubmitFile)
        </dt>

        <dd>
            @if (Model.Submission.SubmitFile != null)
            {
                @Html.ActionLink(Model.Submission.SubmitFile.FileName, "DownloadSubmissionFile", "Submissions", new { assignmentId = Model.Submission.AssignmentId, Model.Submission.StudentId }, null)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Submission.Submitted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Submission.Submitted)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { assignmentId = Model.Submission.AssignmentId, studentId = Model.Submission.StudentId}) |
    @Html.ActionLink("Back to List", "Index")
</p>
