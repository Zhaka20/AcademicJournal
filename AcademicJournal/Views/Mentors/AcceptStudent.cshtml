@model IEnumerable<AcademicJournal.DAL.Models.Student>

@{
    ViewBag.Title = "AcceptStudent";
}

<h2>AcceptStudent</h2>

<p>
    @Html.ActionLink("Create New", "Create","Students")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
    
        <td>
            @using (Html.BeginForm("AcceptStudent", "Mentors",  new { id = item.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Accept as student" />
            }
            @Html.ActionLink("Details", "Details", "Students", new { id=item.Id }, null) |
        </td>
    </tr>
}

</table>
