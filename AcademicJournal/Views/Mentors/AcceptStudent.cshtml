@model IEnumerable<AcademicJournal.DAL.Models.Student>

@{
    ViewBag.Title = "Accept new students";
}

<h2>Accept new students</h2>

<p> 
    @Html.ActionLink("Back to Home", "Home", "Mentors") |
    @Html.ActionLink("Create a new student", "Create","Students")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
    
        <td>
            @Html.ActionLink("Details", "Details", "Students", new { id = item.Id }, null) |
            @using (Html.BeginForm("AcceptStudent", "Mentors",  new { id = item.Id }, FormMethod.Post, new { @class = "d-inline" }))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Accept as student" />
            }           
        </td>
    </tr>
}

</table>
