    ViewBag.Title = "Home";
}

<h2>Home</h2>

<h3>Personal Informatin:</h3>
<hr />
<div>
    <h4>Mentor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
</p>
<br /><br />

<h3>Students ...</h3>
<p>
    @Html.ActionLink("Add New", "AcceptStudent")
</p>
<table class="table">
    <tr>
        <th>
            First Name@*@Html.DisplayNameFor(model => model.Students.FirstName)*@
        </th>
        <th>
           Last Name @*@Html.DisplayNameFor(model => model.Students.LastName)*@
        </th>
        <th>
           Email @*@Html.DisplayNameFor(model => model.Students.Email)*@
        </th>
        <th>
           Phone Number @*@Html.DisplayNameFor(model => model.Students.PhoneNumber)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Details", "Details","Students", new { id = item.Id }, null) |
                @Html.ActionLink("New assignment", "Create", "Assignments", new { id = item.Id }, null)
                @using (Html.BeginForm("RemoveStudent", "Mentors", new { id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Remove" />
                }
            </td>
        </tr>
    }

</table>

<br />
<br />
<hr />

<h3>@Html.ActionLink("Go to my assignments...", "CreatedBy", "Assignments", new { id = Model.Id }, null)</h3>




