@model AcademicJournal.ViewModels.Controller.MentorsListVM

@{
    ViewBag.Title = "ListAllMentors";
}

<h2>ListAllMentors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MentorVM.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MentorVM.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MentorVM.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MentorVM.PhoneNumber)
        </th>
        <th>
        <th></th>
    </tr>

    @foreach (var item in Model.Mentors)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
